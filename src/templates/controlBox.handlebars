<div id="control_box_{{id}}" class="control-box{{#if selected}} selected{{/if}}" data-element="{{id}}" style="position:absolute;left:{{x}}px;top:{{y}}px;width:{{w}}px;height:{{h}}px">
  <div class="control-border"></div>
  <div class="resize-handle resize-handle-t" data-edge="t"></div>
  <div class="resize-handle resize-handle-tr" data-edge="tr"></div>
  <div class="resize-handle resize-handle-r" data-edge="r"></div>
  <div class="resize-handle resize-handle-br" data-edge="br"></div>
  <div class="resize-handle resize-handle-b" data-edge="b"></div>
  <div class="resize-handle resize-handle-bl" data-edge="bl"></div>
  <div class="resize-handle resize-handle-l" data-edge="l"></div>
  <div class="resize-handle resize-handle-tl" data-edge="tl"></div>
</div>
