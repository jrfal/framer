<div class="bbm-modal__topbar">
  <h3 class="bbm-modal__title">{{title}}</h3>
</div>
<div class="bbm-modal__section">
  {{#if message}}<span class="dialog-message">{{message}}</span>{{/if}}
  {{#if editValue}}<input type="text" class="edit-value" value="{{editValue}}" />{{/if}}
</div>
<div class="bbm-modal__bottombar">
  {{#each actions}}
  <a href="#" class="bbm-button {{class}}">{{label}}</a>
  {{/each}}
</div>
